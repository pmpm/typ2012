<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="icon" href="/Content/pilka_ico.png" type="image/png" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/south-street/jquery-ui-1.8.20.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jeditable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jeditable.time.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jeditable.masked.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tablehover.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-sliderAccess.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-timepicker-addon.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Highcharts-2.2.1/js/highcharts.src.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Highcharts-2.2.1/js/themes/my.js")" type="text/javascript"></script>
   
    <script>

        $(document).ready(function () {
       
            $(".showDateTimePicker").datetimepicker({	
	            timeFormat: 'hh:mm',	           
	            stepMinute: 5
            });

            $("#tableRanking").tableHover({
                                             
                                            colClass: 'colhover', 
                                            clickClass: 'click', 
            }); 
          
            $(".inline-edit").editable("/Betting/UpdateBet",
                                    {
                                             type      : 'time',
                                             submit: "Zapisz",                                            
                                             cssclass: 'inlineEditor',                                           
                                             tooltip: "Typuj"
                                         });

           $("#hour").mask("99-99");                         
        });

        function ClearForm() 
        {
           $("#text_box_comment").val("");
        }
       
    </script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
                @Html.ActionLink("Regulamin", "Index", "Rules")
            </div>
            <div class="title-info">
                <div>
                    <h2>
                        Typ2012</h2>
                    <h3>
                        Witam i zapraszam do typowania</h3>
                </div>
            </div>
            <div id="menucontainer">
                <img src="../../Content/Images/pilka.png" alt="pilka" />
                <ul id="menu">
                    <li>@Html.ActionLink("Ranking", "Index", "Home")</li>
                    <li>@Html.ActionLink("Tabela", "Index", "Table")</li> 
                    <li>@Html.ActionLink("Wykres", "Index", "Chart")</li>
                    <li>@Html.ActionLink("Moje zakłady", "Index", "Betting")</li>
                    <li>@Html.ActionLink("Komentarze", "Index", "Shoutbox")</li>
                    @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Ustawienia", "Index", "Settings")</li>
                        <li>@Html.ActionLink("Gracze", "Index", "UsersManager")</li>
                    }
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <!--  <div id="footer">
        </div> -->
    </div>
</body>
</html>
