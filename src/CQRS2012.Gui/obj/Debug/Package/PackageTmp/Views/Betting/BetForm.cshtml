@model CQRS2012.Gui.Models.Bet
           
@{
    ViewBag.HomeTeamFlagUrl = Model.Game.HomeTeam.PathToFlag;
    ViewBag.GuestTeamFlagUrl = Model.Game.GuestTeam.PathToFlag;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Typowanie</legend>
        @Html.HiddenFor(model => model.Game.Id)
        <table class="games-table">
            <tr>
                <td class="hometeam-block">
                    @Html.DisplayFor(model => model.Game.HomeTeam.Name)
                    <img src="@ViewBag.HomeTeamFlagUrl" />
                </td>
                <td class="result-block">
                    @Html.EditorFor(model => model.Result.HomeGoals)
                    @Html.ValidationMessageFor(model => model.Result.HomeGoals)
                    <span>:</span>
                    @Html.EditorFor(model => model.Result.GuestGoals)
                    @Html.ValidationMessageFor(model => model.Result.GuestGoals)
                </td>
                <td class="guestteam-block">
                    <img src="@ViewBag.GuestTeamFlagUrl" />
                    @Html.DisplayFor(model => model.Game.GuestTeam.Name)
                </td>
                <td>
                    <input type="submit" value="Zapisz" />
                </td>
            </tr>
        </table>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
