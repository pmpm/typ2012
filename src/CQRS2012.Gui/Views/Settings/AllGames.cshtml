@model IEnumerable<CQRS2012.Gui.Models.Game>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            HomeTeam
        </th>
        <th>
            GuestTeam
        </th>
        <th>
            GameStartDate
        </th>
        <th>
            IsFinished
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HomeTeam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GuestTeam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFinished)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |         
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
