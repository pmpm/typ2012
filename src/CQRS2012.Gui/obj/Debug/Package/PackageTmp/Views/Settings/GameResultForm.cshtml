@model CQRS2012.Gui.Models.GameResult
           
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>GameResult</legend>

      @*  @Html.HiddenFor(model => model.Id) *@
        @Html.HiddenFor(model => model.Game.Id)

        <span>@ViewBag.Game.HomeTeam vs. @ViewBag.Game.GuestTeam</span>   

        <div class="editor-label">
            @Html.LabelFor(model => model.HomeGoals)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HomeGoals)
            @Html.ValidationMessageFor(model => model.HomeGoals)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GuestGoals)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GuestGoals)
            @Html.ValidationMessageFor(model => model.GuestGoals)
        </div>

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

